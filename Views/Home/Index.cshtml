@model Contacts.Models.Contact
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div>
    @if(ViewData["Contacts"] != null)
	{
	    @foreach (Contact c in (List<Contacts.Models.Contact>) ViewData["Contacts"])
		{
			<div style="border-bottom: thin solid black;">
			    <div>
				    <label>Name: @c.Name</label>
				</div>
				<div>
				    <label>Email: @c.Email</label>
				</div>
				<div>
				    <label>Phone: @c.Phone</label>
				</div>
				<div>
				    <label>WhatsApp? @c.HasWhatsAppAccount</label>
				</div>
				<div>
				    <label>Telegram? @c.HasTelegramAccount</label>
				</div>
				<div>
				    <label>Notes: @c.Notes</label>
				</div>
				<div>
				    <form asp-controller="Contact" asp-action="Delete" method="get">
					    <input asp-for="ID" type="hidden" value="@c.ID" />
					    <input type="submit" value="Delete" />
					</form>
					<form asp-controller="Contact" asp-action="Edit" method="get">
					    <input asp-for="ID" type="hidden" value="@c.ID" />
					    <input type="submit" value="Edit" />
					</form>
				</div>
			</div>
		}
	}
</div>
<div>
    <form asp-controller="Contact" asp-action="Create" method="post">
        <div>
	    <label>Name:</label>
	    <input asp-for="Name" />
        </div>
        <div>
            <label>Phone:</label>
            <input asp-for="Phone" />
        </div>
        <div>
            <label>Email:</label>
            <input asp-for="Email" />
        </div>
        <div>
            <label>WhatsApp account?</label>
            <input asp-for="HasWhatsAppAccount" type="checkbox" />
        </div>
        <div>
            <label>Telegram account?</label>
            <input asp-for="HasTelegramAccount" type="checkbox" />
        </div>
        <div>
            <label>Notes:</label>
            <input asp-for="Notes" />
        </div>
        <input type="submit" value="Create" />
    </form>
</div>